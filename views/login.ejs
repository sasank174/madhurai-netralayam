<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/0e070a32e4.js"></script>
    <link rel="stylesheet" href="login.css">
    <title>Madhurai Netralayam | login</title>

</head>

<body id="particles-js">
    <script src="particles.js"></script>
    <script src="app.js"></script>

    <header>
        <a href="/" class="logo">MN</a>

        <ul class="navigation">
            <li><a href="/">HOME</a></li>
            <li><a href="/about">ABOUT</a></li>
            <li><a href="/feedback">FEEDBACK</a></li>
            <li class="dropdown">
                <a href="/profile">PROFILE</a>
                <div class="dropdown-content">
                    <a href="#"><%= ename %></a>
                    <a href="/profile">profile</a>
                    <a href="/history">history</a>
                    <a href="/logout">sign out</a>
                </div>
            </li>
        </ul>
    </header>

    <div class="container">
        <h1>Madhurai Netralayam</h1>
        <h2><i class="fas fa-user-md"></i> <strong>Sign In </strong></h2>

        <form action="/login" method="post">
            <div class="inputbox">
                <input type="email" name="email" required>
                <span><strong>Email: </strong></span>
            </div>
            <div class="inputbox">
                <input type="password" name="password" required>
                <span><strong>Password: </strong></span>
            </div>
            <div class="inputbox">
                <button type="submit">Sign in</button>
            </div>
            <div class="inputbox">
                <a href="/register">Sign Up</a>
                <!-- <a href="#"> <i class="fab fa-google"></i></a>
                <a href="#"><i class="fab fa-facebook-f"></i></a> -->
            </div>
        </form>
        <p class="information"> <%= information %> </p>
    </div>

    <div class="media">
        <ul>
            <li><a href="https://en-gb.facebook.com/login/" target="_blank"><i class="fab fa-facebook-f"></i></a></li>
            <li><a href="https://www.instagram.com/accounts/login/" target="_blank"><i class="fab fa-twitter"></i></a></li>
            <li><a href="https://twitter.com/login?lang=en" target="_blank"><i class="fab fa-instagram"></i></a></li>
        </ul>
    </div>
    
</body>

</html>